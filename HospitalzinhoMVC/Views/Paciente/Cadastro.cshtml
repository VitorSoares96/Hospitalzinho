@{
    // PASSO 1: Diz que esta página deve usar o _Layout.cshtml como base.
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CadastroPaciente.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
}

<h1>Cadastro de Paciente</h1>
<div id="area-de-trabalho">

    <!-- 3. Paciente Não Encontrado -->
    <div id="paciente-nao-encontrado">
        <!-- Formulário de Cadastro de Novo Paciente (inicialmente oculto) -->
        <section id="cadastro-novo-paciente">
            <!--class="hidden"-->
            <h2>Cadastro de Novo Paciente</h2>
            <form action="#" method="post">
                <fieldset>
                    <legend>Dados Pessoais</legend>
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="nome-completo">Nome Completo</label>
                            <input type="text" id="nome-completo" name="nome-completo" required>
                        </div>
                        <div class="form-group">
                            <label for="data-nascimento">Data de Nascimento</label>
                            <input type="date" id="data-nascimento" name="data-nascimento" required>
                        </div>
                        <div class="form-group">
                            <label for="nome-mae">Nome da Mãe</label>
                            <input type="text" id="nome-mae" name="nome-mae" required>
                        </div>
                        <div class="form-group">
                            <label for="cpf-novo">CPF</label>
                            <input type="text" id="cpf-novo" name="cpf-novo">
                        </div>
                        <div class="form-group">
                            <label for="cns-novo">CNS</label>
                            <input type="text" id="cns-novo" name="cns-novo">
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Endereço</legend>
                    <div class="address-grid">
                        <div class="form-group">
                            <label for="cep">CEP</label>
                            <input type="text" id="cep" name="cep">
                        </div>
                        <div class="form-group full-width">
                            <label for="rua">Rua</label>
                            <input type="text" id="rua" name="rua">
                        </div>
                        <div class="form-group">
                            <label for="numero">Número</label>
                            <input type="text" id="numero" name="numero">
                        </div>
                        <div class="form-group">
                            <label for="bairro">Bairro</label>
                            <input type="text" id="bairro" name="bairro">
                        </div>
                    </div>
                </fieldset>
                <div class="botoes-form">
                    <button type="submit" class="btn-salvar">Salvar Novo Paciente</button>
                </div>
            </form>
        </section>

    </div>

</div> <!-- Fim de #area-de-trabalho -->