@{
    // PASSO 1: Diz que esta página deve usar o _Layout.cshtml como base.
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CadastroPaciente.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
}

<h1>Prontuário Eletrônico do Paciente</h1>

<!-- Seção de Pesquisa -->
<section id="pesquisa-paciente">
    <h2>Buscar Paciente</h2>
    <form class="form-pesquisa" method="post" action="/Paciente/Consulta">
        <div class="form-group">
            <label for="cpf-paciente">CPF ou Cartão Nacional de Saúde (CNS)</label>
            <input type="text" id="cpf-paciente" name="cpfPaciente" placeholder="Digite o CPF ou CNS do paciente" required>
        </div>
        <button type="submit" class="btn-pesquisar">Pesquisar</button>
    </form>
    <p style="margin-bottom: 0" class="hidden">Feedback CPF paciente</p>
</section>

<!-- Agrupar os resultados. Pode ficar escondida via JS -->
<div class="resultados-prontuario hidden">

    <section class="card-prontuario" id="dados-paciente">
        <div class="card-header">
            <h2>Dados do Paciente</h2>
        </div>
        <div class="card-body info-paciente">
