<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Hospitalzinho"
                   namespace="Hospitalzinho.Entidades">

	<class name="DoencaCronicaModelo" table="doenca_cronica_modelo" lazy="false">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">seq_doenca_modelo</param>
			</generator>
		</id>

		<property name="Nome" column="nome" type="string" />
		<property name="Cid" column="cid" type="string" not-null="true" />
		<property name="Descricao" column="descricao" type="string" />
		<property name="CriadoEm" column="data_cadastro" not-null="true" />
		<property name="UltimaAlteracao" column="data_atualizacao" not-null="true" />

		<bag name="Pacientes" inverse="true" cascade="all-delete-orphan">
			<key column="doenca_modelo_id"/>
			<one-to-many class="PacienteDoenca"/>
		</bag>
	</class>
</hibernate-mapping>
